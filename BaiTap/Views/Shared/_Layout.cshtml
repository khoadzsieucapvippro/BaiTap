                    <img src="https://pos.nvncdn.com/4cfaaa-162783/ps/20240114_dFT9fz9roM.png?v=1705165772" class="card-img-top" />
                </div>
            </div>


            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>

 
        <footer class="bg-dark text-white text-center mt-3 p-3">
